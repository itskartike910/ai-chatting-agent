{
  "manifest_version": 3,
  "name": "Social Shopping Agent",
  "version": "1.0.0",
  "description": "AI-powered chat agent",
  "permissions": [
    "storage",
    "alarms",
    "activeTab",
    "scripting",
    "tabs",
    "debugger",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Social Shopping Agent"
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["index.html", "static/*"],
      "matches": ["<all_urls>"]
    }
  ]
}